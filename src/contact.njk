<section class="contact-section">
    <div class="contact-content">
        <div class="contact-info">
            <h1>Contact Us</h1>
            <p>Have questions about Kite? We're here to help! Reach out to our team using the contact information below or fill out the form.</p>
            
            <div class="contact-card">
                <h3>Our Office</h3>
                <div class="contact-detail">
                    <i data-lucide="map-pin" class="contact-icon"></i>
                    <div class="contact-text">
                        Kelowna, BC
                    </div>
                </div>
                
                <!--div class="contact-detail">
                    <i data-lucide="phone" class="contact-icon"></i>
                    <div class="contact-text">
                        (250) 555-0123
                    </div>
            </div-->
                
                <div class="contact-detail">
                    <i data-lucide="mail" class="contact-icon"></i>
                    <div class="contact-text">
                        hello@churchkite.com
                    </div>
                </div>
                
                <div class="contact-detail">
                    <i data-lucide="clock" class="contact-icon"></i>
                    <div class="contact-text">
                        Monday - Friday: 9am - 5pm PST<br>
                        Saturday - Sunday: Closed
                    </div>
                </div>
            </div>
        </div>
        
        <div class="form-container">
            <div class="form-heading">
                <h2>Send Us a Message</h2>
                <p>Fill out the form below and we'll get back to you as soon as possible.</p>
            </div>
            
            <form id="contact-form" name="kite-contact" method="POST" data-netlify="true" netlify-honeypot="bot-field">
                <input type="hidden" name="form-name" value="kite-contact">
                <p class="hidden" style="display: none;">
                    <label>Don't fill this out if you're human: <input name="bot-field" /></label>
                </p>
                
                <div class="form-group">
                    <label for="name">Name *</label>
                    <input type="text" id="name" name="name" required>
                </div>
                
                <div class="form-group">
                    <label for="email">Email *</label>
                    <input type="email" id="email" name="email" required>
                </div>
                
                <div class="form-group">
                    <label for="inquiry-type">Inquiry Type *</label>
                    <select id="inquiry-type" name="inquiry_type" required>
                        <option value="" disabled selected>Select an option</option>
                        <option value="General">General</option>
                        <option value="Support">Support</option>
                        <option value="Media Inquiries">Media Inquiries</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="message">Message *</label>
                    <textarea id="message" name="message" required placeholder="How can we help you?"></textarea>
                </div>
                
                <button type="submit" class="submit-btn">Send Message</button>
            </form>
        </div>
    </div>
</section>
