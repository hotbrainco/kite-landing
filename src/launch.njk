/* Slide-in Checkout Panel Styles */
.checkout-panel {
  position: fixed;
  top: 0;
  right: -400px; /* Start off-screen */
  width: 400px;
  height: 100%;
  background-color: white;
  box-shadow: -2px 0 5px rgba(0,0,0,0.5);
  transition: right 0.3s ease-in-out;
  z-index: 1000;
  padding: 20px;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
}

.checkout-panel.open {
  right: 0; /* Slide in */
}

.checkout-panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
  padding-bottom: 10px;
  margin-bottom: 20px;
}

.checkout-panel-header h3 {
  margin: 0;
}

#close-checkout {
  background: none;
  border: none;
  font-size: 24px;
  cursor: pointer;
}

#checkout-form {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.form-row {
  margin-bottom: 20px;
}

.form-row label {
  display: block;
  margin-bottom: 5px;
  font-weight: 500;
}

.form-row input {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

#card-element {
  border: 1px solid #ccc;
  padding: 10px;
  border-radius: 4px;
}

/* Checkout sections */
.checkout-section {
  margin-bottom: 24px;
  border-bottom: 1px solid #eee;
  padding-bottom: 16px;
}

.checkout-section h4 {
  margin-top: 0;
  margin-bottom: 16px;
}

.checkout-section:last-of-type {
  border-bottom: none;
}

/* Order summary styles */
.product-details {
  margin-bottom: 16px;
}

.product-name-price {
  display: flex;
  justify-content: space-between;
  font-weight: 600;
  margin-bottom: 4px;
}

.product-description {
  color: #666;
  font-size: 0.9em;
  margin: 0;
}

/* Discount code section */
.discount-code-section {
  margin: 16px 0;
}

.discount-input-group {
  display: flex;
}

.discount-input-group input {
  flex-grow: 1;
  margin-right: 8px;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.discount-input-group button {
  padding: 8px 16px;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.discount-input-group button:disabled {
  background-color: #aab7c4;
}

#discount-message {
  font-size: 0.9em;
  margin: 4px 0 0 0;
}

/* Total section */
.total-section {
  margin-top: 16px;
}

.subtotal, .discount, .total {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
}

.total {
  font-weight: 700;
  font-size: 1.1em;
  border-top: 1px solid #eee;
  padding-top: 8px;
}

.hidden {
  display: none;
}
</style>

